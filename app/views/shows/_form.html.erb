<%= form_for(@show,:html => {:class=>'form-horizontal', :role => 'form'}) do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h4>

      <ul>
      <% @show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-xs-4">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>  
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-xs-4">
      <%= f.label :kennel_club %>
      <%= f.text_field :kennel_club, class: 'form-control' %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-xs-4">
      <%= f.label :start_date %>
      <%= f.text_field :start_date,'data-behaviour' => 'datepicker', value: date_value(@show.start_date), :readonly => true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-4">
      <%= f.label :end_date %>
      <%= f.text_field :end_date,'data-behaviour' => 'datepicker', value: date_value(@show.end_date), :readonly => true, class: 'form-control' %>
    </div>
  </div>  
    
  <div class="form-group">
    <div class="col-xs-4">
      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>
    </div>
  </div>  
  
  <br/>  
  <p><%= f.submit class: 'btn btn-primary' %></p>
  
<% end %>
