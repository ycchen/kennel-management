<div class="root">
  <div class="row">
    <div class="col-lg-12">
      <div class="grey-box">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Sale:</strong>
        <%= @payment.sale.dog.name %>
      </p>
      <p>
        <strong>Payment type:</strong>
        <%= @payment.payment_type.name %>
      </p>
      <p>
        <strong>Payment status:</strong>
        <%= @payment.payment_status.name %>
      </p>

      <p>
        <strong>Payment date:</strong>
        <%= @payment.payment_date %>
      </p>

      <p>
        <strong>Amount:</strong>
        <%= number_to_currency(@payment.amount, :locale => 'zh-TW')%>
      </p>

      <p>
        <strong>Note:</strong>
        <%= @payment.note %>
      </p>

      <%= link_to 'Edit', edit_payment_path(@payment),class: 'btn btn-primary'  %> |
      <%= link_to 'Back', payments_path,class: 'btn btn-primary'  %>
      </div>
    </div>
  </div>
</div>