<div class="root">
  <div class="row">
    <div class="col-lg-12">
      <div class="grey-box">  
        <div class="page-header">
          <h4 class="page-header-text">Statuses</h4>
          <%= add_new_btn(new_status_path) %>
         </div>  
            <table class="table table-condensed table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Sort</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @statuses.each do |status| %>
                  <tr>
                    <td><%= status.name %></td>
                    <td><%= status.sort %></td>
                    <td><%= link_to 'Show', status , class: 'btn btn-primary' %></td>
                    <td><%= link_to 'Edit', edit_status_path(status) , class: 'btn btn-primary' %></td>
                    <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Status', new_status_path %>
      </div>
    </div>
  </div>
</div>