                    <td>
                      <div class="btn-group">
                      <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-edit icon-white"></i>Actions
                        <span class="caret"></span>
                      </a>
                      <ul class="dropdown-menu">
                        <li>
                          <%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_litter_path(litter) %>
                        </li>
                        <li class="divider"></li>
                        <li>
                          <%= link_to '<i class="icon-trash"></i> Delete'.html_safe, litter, method: :delete, data: {confirm: 'Are you sure?'} %>
                        </li>
                      </ul>
                    </div>
                    </td>
                     -->
                    <td>
                      <%= link_to 'Show', litter, class: 'btn btn-primary btn-small' %>
                      <%= link_to 'Edit', edit_litter_path(litter), class: 'btn btn-primary btn-small' %>
                      <%= link_to 'Destroy', litter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-small' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Litter', new_litter_path %>
        </div>      
      </div>
  </div>
</div>