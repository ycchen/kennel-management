<div class="root">
  <div class="row">
      <div class="col-lg-12">
          <div class="grey-box">
            <div class="page-header">
              <h4 class="page-header-text">Litters</h4>
              <%= add_new_btn(new_litter_path) %>
            </div>
            
            <table class="table table-condensed table-striped">
              <thead>
                <tr>
                  <th>Pregnancy</th>
                  <th>Birthday</th>
                  <th>Gender</th>
                  <th>Color</th>
                  <th>Survival</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @litters.each do |litter| %>
                  <tr>
                    <td><%= litter.pregnancy.name %> - <%= litter.pregnancy.dog.call_name %></td>
                    <td><%= litter.pregnancy.surgery_date %></td>
                    <td><%= litter.gender %></td>
                    <td><%= litter.color.name %></td>
                    <td><%= yesno(litter.survival) %></td>
