<div class="root">
	<div class="row">
		<div class="col-lg-12">
			<div class="col-lg-6 col-md-offset-3 grey-box well">
			<h2>Sign in</h2>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f| %>
			  <div class="form-group">
			  	<div class="col-xs-6">
				  	<%= f.label :email %>
				  	<%= f.email_field :email, :autofocus => true, class: 'form-control' %>
			  	</div>
			  </div>

			  <div class="form-group">
			  	<div class="col-xs-6">
				  	<%= f.label :password %>
				  	<%= f.password_field :password, class: 'form-control' %>
				 </div>
			  </div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>

			  <div><%= f.submit "Sign in",class: 'btn btn-primary' %></div>
			<% end %>

			<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>