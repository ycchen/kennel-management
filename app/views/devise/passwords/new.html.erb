<div class="root">
	<div class="row">
		<div class="col-lg-12">
			<div class="col-lg-6 col-md-offset-3 grey-box well">
				<h2>Forgot your password?</h2>

				<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post , class: 'form-horizontal', role: 'form'}) do |f| %>
				  <%= devise_error_messages! %>

				  <div class="form-group">
				  	<div class="col-xs-4">
					  	<%= f.label :email %>
					  	<%= f.email_field :email, :autofocus => true, class: 'form-control' %>
				  	</div>
				  </div>

				  <div><%= f.submit "Send me reset password instructions" , class: 'btn btn-primary' %></div>
				<% end %>

				<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>