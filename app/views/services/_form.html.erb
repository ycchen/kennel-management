<%= simple_form_for(@service, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <div class="col-xs-4">
	    <%= f.input :name, input_html: {class: 'form-control'} %>
  	</div>
  </div>

  <div class="form-group">
    <div class="col-xs-4">
	    <%= f.input :description, id: 'message_area',input_html: {class: 'form-control'} %>
  	</div>
  </div>


  
    <p><%= f.button :submit,class: 'btn btn-primary'  %></p>
  
<% end %>
