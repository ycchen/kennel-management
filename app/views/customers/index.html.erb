<div class="root">
  <div class="row">
      <div class="col-lg-12">
          <div class="grey-box">
            <div class="page-header">
              <h4 class="page-header-text">Customer</h4>
              <%= add_new_btn(new_customer_path) %>
            </div>
            
            <table class="table table-condensed table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Full name</th>
                  <th>Email</th>
                  <th>Phone/Mobile</th>
                  <th>Address</th>
                  <th>City</th>
                  <th>Zipcode</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @customers.each do |customer| %>
                  <tr>
                    <td><%= customer.name %></td>
                    <td><%= customer.last_name %>, <%= customer.first_name %></td>
                    
                    <td><%= customer.email %></td>
                    <td><%= customer.phone %><br/><%= customer.mobile %></td>
                    <td><%= customer.address %></td>
                    <td><%= customer.city %></td>
                    <td><%= customer.zipcode %></td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                          <i class="icon-edit icon-white"></i>Actions
                          <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                          <li><%= link_to '<i class="icon-eye-open"></i> Show'.html_safe, customer %></li>
                          <li><%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_customer_path(customer) %></li>
                          <li class="divider"></li>
                          <li><%= link_to '<i class="icon-trash"></i> Delete'.html_safe, customer, method: :delete, data: {confirm: 'Are you sure?'} %></li>
                        </ul>
                      </div>
                    </td>
                    <!-- 
                    <td><%= link_to 'Show', customer %></td>
                    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                    <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                     -->
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Customer', new_customer_path %>
        </div>      
      </div>
  </div>
</div>